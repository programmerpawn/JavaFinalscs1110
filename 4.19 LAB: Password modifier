import java.util.Scanner;

public class LabProgram {
   public static void main(String[] args) {
     Scanner scnr = new Scanner(System.in);
     
     String userPassword;
     userPassword = scnr.next();
     
     userPassword = userPassword.replace('a','@');
     userPassword = userPassword.replace('i','1');
     userPassword = userPassword.replace('m','M');
     userPassword = userPassword.replace('B','8');
     userPassword = userPassword.replace('s','$');
     userPassword = userPassword.concat("!");
     
     System.out.println(userPassword);
     
   }
}
